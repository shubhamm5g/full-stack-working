<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/style.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Dynamic page</title>
  </head>
  <body>

      {{> navbar data=details}}

      {{> slider slides=slides}}

      {{!-- services section --}}

      <section id="services_section" class="py-3">
        <div class="container">
          <h1 class="text-center text-secondary">Services that we provied</h1>

        <div class="row mt-5">
          {{!-- first services col  --}}
          {{#each service}}
          <div class="col-md-4">
            
            <div class="card">
              <div class="card-body">
                <div class="container text-center py-3"><i class="{{this.icon}} service-icon"></i></div>
                <h5 class="card-title">{{this.title}}</h5>
                <p >{{this.description}}</p>
                <a href="#!">Check</a>
                <a href="{{this.linkText}}" class=" ml-3">{{this.link}}</a>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        </div>
      </section>

    {{!-- contact us sectino --}}

    <section id="contact_us_section" class="py-5 background1">
      <div class="container">
        <h3 class="text-center text-secondary">Contact us</h3>
        <div class="row">
          <div class="col-md-12">

                 <form action="/process-contact-form" method="post">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Your Email address</label>
                  <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>


                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Your contact number</label>
                  <input name="phone" type="number" class="form-control" id="contactNumberField">
                </div>

                    <div class="form-floating mt-2">
                    <textarea name="query" style="height:200px ;" class="form-control" placeholder="Enter your query here" id="queryField"></textarea>
                    <label for="queryField">Comments</label>
                  </div>

                <div class="container text-center">
                <button type="submit" class="btn btn-dark">Submit</button>
                </div>
              </form>

          </div>
        </div>
      </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  </body>
</html>